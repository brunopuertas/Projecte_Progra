public abstract class Accio {
    private String cod_Accio;
    private String nom;
    private String associacio;
    private static int comptador = 100; 

    // Constructor
    public Accio(String associacio, String titol) {
        this.associacio = associacio;
        this.nom = titol;
        this.cod_Accion = generateCodAccio(associacio);
    }

    // Mètode per generar el codi d'acció

    private String generateCodAccio(String nomAssociacio) {

        // Prefix amb les tres primeres lletres del nom de l'associació, utilitzo en math.min per evitar problemes si el nom de l associació es més curt (preguntar si cal)        
        String prefix = nomAssociacio.substring(0, Math.min(3, nomAssociacio.length())).toUpperCase();

        // Generar codi utilitzant el comptador global
        String codi = prefix + comptador;
        comptador++; 
        return codi;
    }

    // Getters
    public String getCodAccio() {
        return cod_Accion;
    }

    public String getNom (){
        return nom;
    }
    public String getTitol() {
        return titol;
    }

    public String getAssociacio() {
        return associacio;
    }

    // Mostrar informació de l'acció
    public String toString() {
        return ("L'accio amb codi"+cod_Accio"\n Anomenada" +nom "\n" " la realitza l'assosciacio"+ associacio)
    }
}
