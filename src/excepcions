//excepcions associacio
public class maxAssociacionsExcedit extends Exception{
  public maxAssociacionsExcedit(membre membre){
    super("no es pot afegir el membre"+membre.getnom+"perque excedeix el nombre d'associacions".);
    }
 }
public class llistaPlena extends Exception{
  public llisaPlena(accio accio){
  super("No es pot afegir l'acció" +acció.getnom+ "perque la llista està plena");
   }
}
// excepcions clase xerrades
public class maxMembresExcedit extends Exception{
  public maxMembresExcedit (membre membre){
  super("No es pot afegir el membre" membre.getnom+ "perque es supera el màxim de membres");
   }
}

public class valoracioNoValida extends Exception{
  public maxMembresExcedit (float valoracio){
  super("El valor"+valoracio+"esta fora de rang. Ha de ser un valor entre el 0 i el 10);
   }
}
